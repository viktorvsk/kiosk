- @meta_title = @taxon.seo.try(:title)
- @meta_description = @taxon.seo.try(:description)
- @meta_keywords = @taxon.seo.try(:keywords)
.panel.panel-default
  .panel-heading
    .row
      .col-xs.3.col-sm-1
        - cache ['super_category_image', @taxon] do
          = image_tag @taxon.children_image_path, class: 'img-responsive thumbnail'
      .col-xs-9.col-sm-11
        %h1= @taxon.name
  .panel-body
    = breadcrumbs_for_taxon(@taxon)
    %br/
    %br/
    %ul.list-group
      - @taxon.children.includes(:image, :category).joins(:category).each do |child_taxon|
        - next if child_taxon.category.products.with_price.blank?
        %li.list-group-item
          .row
            .col-sm-2.col-md-1
              - cache ['category_image', child_taxon] do
                = image_tag child_taxon.category_image_path, class: 'img-responsive thumbnail'
            .col-sm-10.col-md-11
              - if child_taxon.children.present?
                = link_to child_taxon.name, taxon_path(child_taxon)
              - else

                %h3= link_to child_taxon.category.name, c_path(slug: child_taxon.category.slug, id: child_taxon.category)
                = render partial: 'products/search_card', collection: child_taxon.category.products.with_price.order('RANDOM()').limit(3), as: :product


