!!! XML
%yml_catalog{:date => Time.now}
  %shop
    %name Интернет-магазин электроники Эвотех
    %company Evotex
    %url evotex.kh.ua
    %currencies
      %currency#UAH{:rate => "1"}
    %categories
      - categories.find_each do |category|
        %category{:id => category.id}= category.name
    %offers
      - categories.find_each do |category|
        = render collection: category.products_for_price, partial: 'catalog/price_offer', locals: { warranty_id: warranty_id, category: category }, as: :product

