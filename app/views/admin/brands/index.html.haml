.jumbotron
  = search_form_for @q, url: search_admin_brands_path do |f|
    .row
      .col-sm-8.col-sm-offset-2.text-center
        .input-group
          = f.search_field :name_cont, class: 'form-control', placeholder: 'Название'
          .input-group-btn= f.submit 'Найти', class: 'btn btn-success'

.page-header
  = link_to new_admin_brand_path, :class => 'btn btn-primary' do
    %span.glyphicon.glyphicon-plus
    Новый бренд
  %h1 Бренды
.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th Название
    %tbody
      - @brands.each do |brand|
        %tr
          %td
            = brand.name
          %td
            = link_to 'Изменить', edit_admin_brand_path(brand)
          %td
            = link_to admin_brand_path(brand), method: :delete, class: 'btn btn-xs btn-danger', 'data-confirm' => 'Вы уверены?' do
              %i.glyphicon.glyphicon-remove
      %tfoot
        %tr
          %td.text-center
            = paginate @brands
