%li.list-group-item.clearfix{ 'data-position' => 'position', 'data-id' => property.id }
  .pull-right
    = link_to '#', 'data-destroy-property' => property.id do
      %i.glyphicon.glyphicon-remove-circle
  = form_for property, url: update_admin_product_product_property_path(property.product, property), remote: true do |f|
    = field_for f, :property_name
    = field_for f, :name
    = f.submit '', type: :hidden
