.page-header
  = link_to new_admin_product_path, :class => 'btn btn-primary' do
    %span.glyphicon.glyphicon-plus
    Новый товар
  %h1 Товары

.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th
        %th
        %th

    %tbody
      - @products.each do |product|
        %tr
          %td= link_to 'Edit', edit_admin_product_path(product)
          %td= link_to 'Destroy', product, :data => { confirm: 'Вы уверены?' }, :method => :delete
