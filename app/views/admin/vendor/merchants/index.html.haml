.page-header
  = link_to new_admin_vendor_merchant_path, :class => 'btn btn-primary' do
    %span.glyphicon.glyphicon-plus
    New Merchant
  %h1 Listing admin_vendor_merchants

.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th
        %th
        %th

    %tbody
      - @admin_vendor_merchants.each do |admin_vendor_merchant|
        %tr
          %td= link_to 'Show', admin_vendor_merchant
          %td= link_to 'Edit', edit_admin_vendor_merchant_path(admin_vendor_merchant)
          %td= link_to 'Destroy', admin_vendor_merchant, :data => { confirm: 'Are you sure?' }, :method => :delete
