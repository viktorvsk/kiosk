.page-header
  = link_to new_admin_vendor_merchant_path, :class => 'btn btn-primary' do
    %span.glyphicon.glyphicon-plus
    Новый поставщик
  %h1= @merchants.present? ? 'Все поставщики' : 'Поставщики отсутствуют'

- if @merchants.present?
  .table-responsive
    %table.table.table-striped.table-bordered.table-hover
      %thead
        %tr
          %th Название
      %tbody
        = render @merchants


