.well
  = search_form_for @q_vendor_products, url: search_admin_vendor_products_path(format: :js), remote: true do |f|
    .row
      .col-sm-12
        .form-group
          = f.label :name_or_articul_cont, 'Название или код поставщика'
          = f.search_field :name_or_articul_cont, class: 'form-control'
      %div{ 'data-toggleable' => 'vendor-products-filters', style: 'display: none' }
        .col-sm-4
          .form-group
            = f.label :vendor_merchant_id_eq, 'Поставщик'
            = f.collection_select(:vendor_merchant_id_eq, Vendor::Merchant.all, :id, :name, { include_blank: 'Все' }, class: 'form-control select2')
        .col-sm-4
          .form-group
            = f.label :is_rrc_eq, 'RRC'
            = f.select(:is_rrc_eq, [['да', true], ['нет', false]], { include_blank: 'Все' }, class: 'form-control select2')
        .col-sm-4
          .form-group
            = f.label :in_stock_eq, 'Наличие'
            = f.select(:in_stock_eq, [['да', true], ['нет', false]], { include_blank: 'Все' }, class: 'form-control select2')
        .col-sm-3
          .form-group
            = f.label :price_gteq, 'Цена от'
            = f.search_field :price_gteq, class: 'form-control'
        .col-sm-3
          .form-group
            = f.label :price_lteq, 'Цена до'
            = f.search_field :price_lteq, class: 'form-control'
        .col-sm-3
          .form-group
            = f.label :usd_gt_or_eq, 'Доллар от'
            = f.search_field :usd_gt_or_eq, class: 'form-control'
        .col-sm-3
          .form-group
            = f.label :usd_lt_or_eq, 'Доллар до'
            = f.search_field :usd_lt_or_eq, class: 'form-control'
        .col-sm-3
          .form-group
            = f.label :category_cont, 'Категория'
            = f.search_field :category_cont, class: 'form-control'
        .col-sm-3
          .form-group
            = f.label :brand_cont, 'Бренд'
            = f.search_field :brand_cont, class: 'form-control'
        .col-sm-3
          .form-group
            = f.label :model_cont, 'Модель'
            = f.search_field :model_cont, class: 'form-control'
        .col-sm-3
          .form-group
            = f.label :warranty_cont, 'Гарантия'
            = f.search_field :warranty_cont, class: 'form-control'
      .col-sm-12
        .form-group
          .form-actions.text-right
            = link_to 'Сбросить', '#', 'onclick' => 'javascript:$(this).closest("form")[0].reset(); return false;', class: 'btn btn-default btn-small'
            = link_to 'Показать фильтры', '#', 'data-toggler' => 'vendor-products-filters', 'data-hide-msg' => 'Скрыть фильтры', 'data-show-msg' => 'Показать фильтры', class: 'btn btn-default btn-small'
            = f.submit 'Найти', class: 'btn btn-primary btn-small'


%ul.list-group.col-xs-12.vendor-products-list{ 'data-droppable' => 'vendorProductsTable', 'data-vendor-products' => true }
