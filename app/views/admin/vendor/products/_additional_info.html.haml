- if product.is_rrc?
  %b RRC:
  %i= product.rrc.to_f
  %br/
- if product.usd.to_i > 0
  %b $:
  %i= product.usd.to_f
  %br/
- if product.eur.to_i > 0
  %b €:
  %i= product.eur.to_f
  %br/
- if product.uah.to_i > 0
  %b ₴:
  %i= product.uah.to_f
  %br/
- if !product.in_stock?
  %b Нет в наличии
  %br/
- unless product.in_stock_kiev.nil?
  - if product.in_stock_kiev
    %b Киев:
    %i +
    %br/
  - if product.in_stock_kharkov
    %b Харьков:
    %i +
    %br/
  - if product.warranty.present?
    %b Гарантия:
    %i= product.warranty
    %br/
  - if product.category.present?
    %b Категория:
    %i= product.category
    %br/
  - if product.brand.present?
    %b Бренд:
    %i= product.brand
