%li{ 'data-draggable' => 'vendorProduct', 'data-vendor-product-id' => product.id, class: ('inactive' if !product.active?) }
  .text-right
    = link_to '×', toggle_activation_admin_vendor_product_path(product), method: :post, remote: true, 'data-activation-toggle' => 'true'
  %span
    = product.name
    %small= product.id
  %hr/
  %span
    %b= "#{product.price} грн."
    %i= product.merchant.name
    - unless product.active?
      %b Неактивный
    - if product.is_rrc?
      %b RRC
