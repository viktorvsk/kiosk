.well
  = search_form_for @q_vendor_products, url: search_admin_vendor_products_path(format: :js), remote: true do |f|
    .row
      .col-sm-4
        = f.label :name_cont, 'Название'
        = f.search_field :name_cont, class: 'form-control'
      .col-sm-4
        = f.label :vendor_mercant_id_eq, 'Поставщик'
        = f.collection_select(:vendor_merchant_id_eq, Vendor::Merchant.all, :id, :name, {}, class: 'form-control')
      .col-sm-4
        .form-actions.text-right
          = f.submit 'Найти', class: 'btn btn-primary btn-xs'

.table-responsive
%table.table.table-striped.table-bordered.table-hover
  %tfoot
    %tr
      %td#vendor-products-paginate.text-center{ colspan: 2 }
  %thead
    %tr
      %th Название
      %th Цена
  %tbody#vendor-products
