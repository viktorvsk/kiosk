.jumbotron
  = search_form_for @q, url: search_admin_categories_path do |f|
    .row
      .col-sm-8.col-sm-offset-2.text-center
        .input-group
          = f.search_field :name_cont, class: 'form-control', placeholder: 'Название'
          .input-group-btn= f.submit 'Найти', class: 'btn btn-success'


.page-header
  = link_to new_admin_category_path, :class => 'btn btn-primary' do
    %span.glyphicon.glyphicon-plus
    Новая категория
  %h1 Категории


.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th Название
        %th Наценка менее
        %th Порог
        %th Наценка более
        %th Товаров

    %tbody
      = render @categories
    - if @categories.respond_to?(:current_page)
      %tfoot
        %tr
          %td.text-center{ colspan: 6 }
            = paginate @categories
