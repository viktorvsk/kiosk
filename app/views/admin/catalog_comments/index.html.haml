.page-header
  .index-links
    %ul
      = generate_links(comment_links, Catalog::Comment)
  %h1 Комментарии
.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th Дата
        %th Товар
    %tbody
      - @comments.each do |comment|
        %tr
          %td
            = I18n.l(comment.created_at, format: "%e %b, %H:%M")
          %td
            = link_to comment.commentable.name, product_path(comment.commentable)
          %td
            = link_to 'Изменить', edit_admin_catalog_comment_path(comment)
          %td
            = link_to admin_catalog_comment_path(comment), method: :delete, class: 'btn btn-xs btn-danger', 'data-confirm': 'Вы уверены?' do
              %i.glyphicon.glyphicon-remove
    %tfoot
      %tr
        %td.text-center{ colspan: 6 }
          = paginate @comments
