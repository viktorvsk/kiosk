<script>
  var priceSlider = function () {
    $("#price-slider").noUiSlider({
      start: [<%= params[:min].to_i || 0 %>, <%= params[:max] || max_category %>],
      connect: true,

      format: wNumb({
        mark: '.',
        decimals: 0
      }),
      range: {
        'min': <%= 0 %>,
        'max': <%= max_category %>
      }
    });

    $('#price-slider').noUiSlider_pips({
      mode: 'steps',
      density: 5
    });
  }

  if (window.$) { priceSlider(); }
</script>
<% content_for :post_scripts do %>
  <script>priceSlider();</script>
<% end %>


