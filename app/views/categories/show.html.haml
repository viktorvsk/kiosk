.page-header
  %h1= @category.name
.row
  .col-md-3
    %h2 Фильтры
    %h5 Цена
    .row
      .col-sm-6= text_field :price_min, '', class: 'form-control', 'data-price-min' => true
      .col-sm-6= text_field :price_max, '', class: 'form-control', 'data-price-max' => true
    %h5 Производитель
    - @category.brands.each do |brand|
      %label
        = check_box :brand, brand.id, 'data-brand' => brand.id
        = brand.name
    - @category.category_filters.includes(filter: :values).sort_by(&:position).each do |filter|
      %h5= filter.display_name
      - filter.values.sort_by(&:position).each do |filter_value|
        %label
          = check_box :filter, filter_value.id, 'data-filter' => filter_value.id
          = filter_value.display_name
        %br/
      %hr/

  .col-md-9
    %h2 Результат поиска
    = render collection: @products, partial: 'products/search_card', as: :product
