%tr
  %td
    .product_name
      = link_to p_path(slug: product.slug, id: product.id) do
        = product.name
      = link_to remove_product_order_path(product), method: :delete do
        .pull-right
          %i.glyphicon.glyphicon-remove-circle.text-danger
    .product_image
      = link_to p_path(slug: product.slug, id: product.id) do
        = image_tag product.preview_path, class: 'img-responsive'
    .product_price= price_for(product)
  %td{ width: 150 }
    .product_quantity
      .col-sm-12


        = form_tag update_lineitem_count_order_path, remote: false, 'data-autoupdate' => true, method: :patch do
          = number_field "line_items[#{li_id}]", :quantity, value: quantity, class: 'form-control', min: 1
    .product_price
      = price_for(product, quantity)

