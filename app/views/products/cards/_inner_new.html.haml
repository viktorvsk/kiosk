= render 'products/card/ogg_meta', product: product

%div{ itemtype: 'http://schema.org/Product', itemscope: '' }
  = render 'products/card/header', product: product
  = breadcrumbs_for_product(product)
  %br/
  .product_card
    = render 'products/card/sku', product: product
    .row
      .col-sm-9
        .row
          .col-sm-6
            = render 'products/card/main_image', product: product
            %br/
            .t3d-link.t3d-inj.t3d-std{ 'data-parnter-id' => product.id }
          .col-sm-6
            = render 'products/card/offer_new', product: product
            %h2.text-center
              = warranty_for product
            %div{ itemprop: 'description' }
              = short_properties_for product

          /
            .col-sm-12
              =# render 'products/card/video', product: product
      .col-sm-3
        = render 'shared/aside_new'
    .row
      = render 'products/card/gallery_images', product: product

    - if product.video.present?
      .row
        .text-center= video_for product.video
    = render 'products/card/product_properties', product_properties: product.product_properties.includes(:property).with_value, product: product
    %small Характеристики и комплектация могут изменяться производителем без уведомления.
