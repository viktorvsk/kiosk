- @meta_title = @product.seo.try(:title).presence || @product.seo_template(:title)
- @meta_keywords = @product.seo.try(:keywords)
- @meta_description = @product.seo.try(:description)
- if current_user.try(:admin?) && @product

  .panel.panel-default
    .panel-heading
      %h3.panel-title Информация о поставщиках
    .panel-body
      - if (vp = @product.vendor_products.active.includes(:merchant)) && vp.present?
        = render partial: 'admin/vendor/products/product', collection: vp, as: :product
      - else
        Товар не привязан.
    - if @product.fixed_price
      .panel-footer
        %b Цена товара зафиксирована.
.row
  .col-sm-3
    = render 'aside'
  .col-sm-9
    = render 'products/product_card', product: @product
- if (similars = @product.similars(Conf['delta'].to_f) ) && similars.present?
  .row
    .col-xs-12
      .panel.panel-warning
        .panel-heading
          %h4.panel-title
            Товары, похожие на <b>#{@product.name}</b>
        .panel-body.text-center
          = render collection: @product.similars(Conf['delta'].to_f), partial: 'products/top_card', as: :product, locals: { css: 'info', name: 'Похожий товар' }
