- cache 'homepage_tops', skip_digest: true do
  %h1 Хиты продаж
  %hr/
  .row
    = render collection: @hit, partial: 'products/top_card', as: :product, locals: { css: 'label-success', name: 'Хит продаж' }
  %h1 Новинки
  %hr/
  .row
    = render collection: @newest, partial: 'products/top_card', as: :product, locals: { css: 'label-danger', name: 'Новинка' }
  %h1 Популярное
  %hr/
  .row
    = render collection: @homepage, partial: 'products/top_card', as: :product, locals: { css: 'label-info', name: 'Популярное' }
