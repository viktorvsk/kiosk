.panel-material.slides-panel
  .row.h-100
    .col-sm-8.h-100
      = render 'shared/slides'
    .col-sm-4.h-100.articles-bar
      %h3 Статьи
      = render 'shared/articles'

- cache ['homepage_tops', @hit, @newest, @homepage] do
  .panel.panel-success
    .panel-heading
      %h4.panel-title Хиты продаж
    .panel-body
      = render collection: @hit.includes(:images), partial: 'products/top_card', as: :product, locals: { css: 'success', name: 'Хит продаж' }
  .panel.panel-warning
    .panel-heading
      %h4.panel-title Новинки
    .panel-body
      = render collection: @newest.includes(:images), partial: 'products/top_card', as: :product, locals: { css: 'danger', name: 'Новинка' }
  .panel.panel-primary
    .panel-heading
      %h4.panel-title Популярное
    .panel-body
      = render collection: @homepage.includes(:images), partial: 'products/top_card', as: :product, locals: { css: 'info', name: 'Популярное' }
.well.well-sm
  = Conf['ck.homepage_seo'].html_safe
