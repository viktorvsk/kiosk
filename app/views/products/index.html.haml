.panel-material.slides-panel
  .row.h-100
    .col-sm-8.h-100.col-xs-12
      - cache ['slides', Markup.active.slides] do
        = render 'shared/slides'
    .col-sm-4.h-100.articles-bar.hidden-xs.hidden-sm
      %h3.text-center Статьи
      - cache ['articles', Markup.active.articles] do
        = render 'shared/articles'
  .visible-xs.visible-sm
    %br/
    .row
      .col-xs-12
        .panel.panel-info
          .panel-heading
            %h4.panel-title.text-center Статьи
          .panel-body
            - cache ['articles', Markup.active.articles] do
              = render 'shared/articles'
.row
  .col-xs-12
    - cache ['homepage_tops', @hit, @newest, @homepage, session[:comparing_ids]] do
      .panel.panel-success
        .panel-heading
          %h4.panel-title Хиты продаж
        .panel-body
          = render collection: @hit.includes(:images), partial: 'products/top_card', as: :product, locals: { css: 'success', name: 'Хит продаж' }
      .panel.panel-warning
        .panel-heading
          %h4.panel-title Новинки
        .panel-body
          = render collection: @newest.includes(:images), partial: 'products/top_card', as: :product, locals: { css: 'danger', name: 'Новинка' }
      .panel.panel-primary
        .panel-heading
          %h4.panel-title Популярное
        .panel-body
          = render collection: @homepage.includes(:images), partial: 'products/top_card', as: :product, locals: { css: 'info', name: 'Популярное' }
.row
  .col-xs-12
    .well.well-sm
      = Conf['ck.homepage_seo'].html_safe
